<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="Reporter" Height="461.343" Width="820"
        Background="#444444">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border  CornerRadius="1" Background="#ccc" BorderBrush="#eee" BorderThickness="1,2,0,0" >
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5" Orientation="Vertical">
            <Button Margin="2" Content="Arlo"></Button>
            <Button Margin="2" Content="Barlow"></Button>
            <Button Margin="2" Content="Carlo"></Button>
            <Button Margin="2" Content="Darlo"></Button>
            <Label Margin="0 20 0 0" Content="Diagnoses:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button Margin="2" Content="Uterus Ben.">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FFFFA9A9" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben." Background="#FF8FA447"/>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben."/>
                    <Button Margin="2" Content="Uterus Ben."/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal." Background="#FFFF1313"/>
                    <Button Margin="2" Content="Uterus Mal." Background="#FF248783"/>
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal."/>
                    <Button Margin="2" Content="Uterus Mal."/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx">
                        <Button.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx">
                        <Button.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF66AA56"/>
                            </RadialGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx"/>
                    <Button Margin="2" Content="Cervix Bx"/>
                </StackPanel>
            </Grid>
            <StackPanel>
                <TextBlock Margin="5" Text="Codes"/>
                <TextBox IsReadOnly="True" Background="#AACCAA" Padding="2" Text="Benign Uterus    Variation 7    Code 247676.34"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="10, 0, 0, 0" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <TextBlock Margin="0" Height="20" Text="Report:"/>
            <TextBox IsReadOnly="True" Background="#AAAACC" Padding="2" Text="Benign Uterus    Variation 7    Code 247676.34"/>
            <RichTextBox                
                Margin="0 5" 
                Padding="5 5 5 5" 
                TextChanged="RichTextBox_TextChanged" 
                Block.LineHeight="8" 
                SpellCheck.IsEnabled="True" 
                VerticalScrollBarVisibility="Visible" 
                HorizontalAlignment="Left" 
                ScrollViewer.CanContentScroll="True" 
                Height="372" 
                AcceptsTab="False" 
                Background="#FF1F1F1F" 
                Foreground="#EEEEEE">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Foreground=&quot;This&quot;"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="This is what the foreground font will look like."/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="The report goes here."/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </StackPanel>
    </Grid>
</Window>
