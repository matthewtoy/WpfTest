                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button Margin="2" Content="Uterus Ben." Click="Button_Click" Background="#FF768EB8"/>
                    <Button Margin="2" Content="Uterus Ben."/>
