        </StackPanel>
        <StackPanel Margin="10, 0, 0, 0" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <TextBlock Margin="0" Height="20" Text="Report:"/>
            <TextBox IsReadOnly="True" Background="#AAAACC" Padding="2" Text="Benign Uterus    Variation 7    Code 247676.34"/>
            <!--EditTextBox-->
            <TextBox   
                x:Name="EditBox"
                Margin="0 5" 
                Padding="5 5 5 5" 
                Width="525"
                TextChanged="EditBox_TextChanged" 
                Block.LineHeight="8" 
                TextWrapping="Wrap"
                AcceptsReturn="True"
                SpellCheck.IsEnabled="True" 
                VerticalScrollBarVisibility="Visible" 
                HorizontalAlignment="Left" 
                ScrollViewer.CanContentScroll="True" 
                Height="372" 
                AcceptsTab="False" 
                Background="#FF1F1F1F" 
                Foreground="#EEEEEE">
                <SpellCheck.CustomDictionaries>
                    <sys:Uri>pack://application:,,,/CustomSpellCheckDictionary.lex</sys:Uri>
